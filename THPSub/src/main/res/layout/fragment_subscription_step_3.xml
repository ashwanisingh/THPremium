<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomChoosePlanLayout"
    style="@style/parentLayoutPaddingStyle"
    >


    <ImageButton
        android:id="@+id/backBtn"
        style="@style/backBtnStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        >

        <com.ns.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:alpha="0.8"
            android:textColor="@color/boldBlackColor"
            android:text="Subcription Plans"
            app:font_path="@string/THP_FiraSans_Bold"
            android:paddingLeft="@dimen/subscription_other_content_left_padding"
            android:paddingTop="@dimen/choose_plan_top_padding"
            />

        <com.ns.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:alpha="0.8"
            android:textColor="@color/boldBlackColor"
            android:text="Subscribe to get these features free for"
            app:font_path="@string/THP_FiraSans_Regular"
            android:paddingLeft="@dimen/subscription_other_content_left_padding"
            android:paddingTop="5dp"
            android:layout_marginBottom="@dimen/baseLayoutTopPadding"
            />

        <FrameLayout
            android:id="@+id/subscriptionPlansLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="@dimen/subscription_pack_height_1"/>

        <com.ns.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:alpha="0.8"
            android:textColor="@color/boldBlackColor"
            android:text="Purchased Plans"
            app:font_path="@string/THP_FiraSans_Bold"
            android:paddingLeft="@dimen/subscription_other_content_left_padding"
            android:paddingTop="@dimen/choose_plan_top_padding"
            />

        <com.ns.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:alpha="0.6"
            android:textColor="@color/boldBlackColor"
            android:text="Your list of purchased plan"
            app:font_path="@string/THP_FiraSans_Regular"
            android:paddingLeft="@dimen/subscription_other_content_left_padding"
            android:paddingTop="5dp"
            android:layout_marginBottom="@dimen/baseLayoutTopPadding"
            />

        <com.ns.view.RecyclerViewPullToRefresh
            android:id="@+id/recyclerViewPullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
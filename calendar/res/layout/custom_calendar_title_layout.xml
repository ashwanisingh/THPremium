<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:paddingBottom="@dimen/calendarTitlePaddingBottom"
    android:paddingTop="@dimen/calendarTitlePaddingTop">

    <TextView
        android:id="@+id/monthTitle"
        style="@style/CalendarView.MonthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingStart="@dimen/paddingLeft"
        android:tag="dateTitle"
        android:text="APRIL"
        android:textAllCaps="false"
        android:textColor="@color/dateColor"/>

    <TextView
        android:id="@+id/yearTitle"
        style="@style/CalendarView.MonthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:textColor="@color/dateColor"
        android:alpha="0.5"
        android:layout_toRightOf="@+id/monthTitle"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/padding"
        android:paddingStart="@dimen/padding"
        android:text="2019"
         />

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/rightButton"
        android:layout_toStartOf="@+id/rightButton"
        android:paddingLeft="@dimen/padding"
        android:src="@drawable/button_previous_month_selector" />

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/padding"
        android:src="@drawable/button_next_month_selector" />
</RelativeLayout>
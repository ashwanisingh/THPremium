<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/defaultWindowColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="parentLayoutPaddingStyle">
        <item name="android:paddingLeft">@dimen/baseLayoutLeftPadding</item>
        <item name="android:paddingTop">@dimen/baseLayoutTopPadding</item>
        <item name="android:paddingRight">@dimen/baseLayoutRightPadding</item>
    </style>

    <style name="bottomLayoutStyle">
        <item name="android:background">@drawable/shadow_r12_s6_wh200_ltr</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="backBtnStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_back_copy_42</item>
        <item name="srcCompat">@drawable/ic_back_copy_42</item>
    </style>

    <style name="crossBtnStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_close_ss</item>
        <item name="srcCompat">@drawable/ic_close_ss</item>
    </style>

    <style name="backBtnPopupStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/blue_backgraoud</item>
        <item name="android:src">@drawable/ic_back_copy_42</item>
        <item name="srcCompat">@drawable/ic_back_copy_42</item>
    </style>

    <style name="introTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/introIconWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="android:textColor">@color/boldBlackColor</item>
        <item name="font_path">@string/FONT_FIRA_SANS_BOLD</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_26</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="nextBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_next_arrow</item>
        <item name="srcCompat">@drawable/ic_next_arrow</item>
    </style>

    <style name="introIconStyle">
        <item name="android:layout_width">@dimen/introIconWidthHeight</item>
        <item name="android:layout_height">@dimen/introIconWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_back_copy_42</item>
        <item name="srcCompat">@drawable/ic_back_copy_42</item>
        <item name="android:layout_marginTop">29dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@string/FONT_TUNDRA_OFFC_BOLD</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/signInAndUp_editText_height</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:alpha">0.6</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/boldBlackColor</item>
    </style>

    <style name="btnTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signInAndUp_editText_height</item>
        <item name="android:background">@drawable/blue_backgraoud</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="font_path">@string/THP_FiraSans_SemiBold</item>
        <item name="android:textSize">@dimen/personal_info_textSize_14sp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:colorControlActivated">@color/boldBlackColor</item>
        <item name="android:textColorHint">@color/boldBlackColor_50alp</item>
        <item name="colorControlNormal">@color/listing_dividerColor</item>
        <item name="colorControlActivated">@color/boldBlackColor_50alp</item>
        <item name="font_path">@string/FONT_FIRA_SANS_REGULAR</item>
    </style>

    <style name="accountInfoET_Style">
        <item name="android:layout_height">@dimen/account_info_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/FONT_FIRA_SANS_REGULAR</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/boldBlackColor_50alp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="personalInfoET_Style">
        <item name="android:layout_height">@dimen/personal_info_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/FONT_FIRA_SANS_REGULAR</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/boldBlackColor</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingBottom">@dimen/personal_info_et_paddingBottom</item>
    </style>

    <style name="addAddressET_Style">
        <item name="android:layout_height">@dimen/add_address_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/FONT_FIRA_SANS_REGULAR</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/boldBlackColor</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingBottom">@dimen/personal_info_et_paddingBottom</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
    </style>

    <style name="HintLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/FONT_FIRA_SANS_BOLD</item>
    </style>

    <style name="fwdBtnStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_right_s</item>
        <item name="srcCompat">@drawable/ic_right_s</item>
    </style>
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#1b528e</item>
    </style>


</resources>

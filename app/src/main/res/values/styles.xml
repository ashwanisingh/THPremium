<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/defaultWindowColor</item>
    </style>

    <style name="parentLayoutStyle">
        <item name="android:paddingLeft">@dimen/baseLayoutLeftPadding</item>
        <item name="android:paddingTop">@dimen/baseLayoutTopPadding</item>
        <item name="android:paddingRight">@dimen/baseLayoutRightPadding</item>
    </style>

    <style name="bottomLayoutStyle">
        <item name="android:background">@drawable/shadow_4</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="backBtnStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_back_copy_42</item>
        <item name="srcCompat">@drawable/ic_back_copy_42</item>
    </style>

    <style name="crossBtnStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="srcCompat">@drawable/ic_close</item>
    </style>

    <style name="backBtnPopupStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:background">@drawable/blue_backgraoud</item>
        <item name="srcCompat">@drawable/ic_close</item>
    </style>

    <style name="introTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/introIconWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/boldBlackColor</item>
        <item name="font_path">@string/FONT_FIRA_SANS_BOLD</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="introIconStyle">
        <item name="android:layout_width">@dimen/introIconWidthHeight</item>
        <item name="android:layout_height">@dimen/introIconWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_back_copy_42</item>
        <item name="srcCompat">@drawable/ic_back_copy_42</item>
        <item name="android:layout_marginTop">29dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@string/FONT_TUNDRA_OFFC_BOLD</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/signInAndUp_editText_height</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:alpha">0.6</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/boldBlackColor</item>
    </style>

    <style name="btnTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signInAndUp_editText_height</item>
        <item name="android:background">@drawable/blue_backgraoud</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="font_path">@string/FONT_FIRA_SANS_BOLD</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>

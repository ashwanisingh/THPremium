<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/parentLayoutPaddingStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/otpLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="@string/bottom_popup_layout_ratio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <LinearLayout
            android:background="@drawable/shadow_r12_s6_wh200_ltr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/baseLayoutLeftPadding"
            android:paddingRight="@dimen/baseLayoutRightPadding"
            android:paddingTop="@dimen/baseLayoutTopPadding"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            >

            <com.ns.view.CustomTextView
                android:id="@+id/setPasswdTitle_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/baseLayoutTopPadding"
                android:textSize="20sp"
                android:textColor="@color/boldBlackColor"
                android:letterSpacing="0.03"
                android:text="Set Password"
                app:font_path="@string/THP_TundraOffc_Bold"
                />

            <com.ns.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:alpha="0.6"
                android:textColor="@color/boldBlackColor"
                android:letterSpacing="0.03"
                android:text="Minimum 5 characters with atleast 1 number and 1 alphabet. No special characters"
                app:font_path="@string/THP_FiraSans_Regular"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/password_Et"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/emailOrMobile_Et"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:imeOptions="actionDone"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="20"
                />

            <ImageButton
                android:id="@+id/passwordVisible_Btn"
                style="@style/backBtnStyle"
                android:src="@drawable/ic_hide_password"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/emailOrMobile_Et"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                />
            </android.support.constraint.ConstraintLayout>


            <com.ns.view.CustomTextView
                android:id="@+id/submit_Txt"
                android:text="Submit"
                style="@style/btnTextStyle"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                />

            <com.ns.view.CustomProgressBar
                android:id="@+id/progressBar"
                android:layout_marginTop="@dimen/textSize_10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/backBtn"
            style="@style/backBtnPopupStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />
    </FrameLayout>





</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/apptab_listing_left_padding"
    android:paddingStart="@dimen/apptab_listing_left_padding"
    android:paddingEnd="@dimen/apptab_listing_right_padding"
    android:paddingRight="@dimen/apptab_listing_right_padding"
    android:paddingTop="@dimen/apptab_listing_top_padding"
    >

    <com.ns.view.CustomTextView
        android:id="@+id/userName_Txt"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textSize="16sp"
        android:textColor="@color/boldBlackColor"
        android:lineSpacingExtra="12sp"
        android:text="Hi Udhay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:font_path="@string/FONT_FIRA_SANS_BOLD"
        />

    <com.ns.view.CustomTextView
        android:id="@+id/yourEditionFor_Txt"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:gravity="bottom"
        android:textSize="14sp"
        android:textColor="@color/greyColor_1"
        android:lineSpacingExtra="12sp"
        android:text="Your edition for 30th jan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName_Txt"
        app:font_path="@string/FONT_FIRA_SANS_REGULAR"
        />

    <com.ns.view.CustomTextView
        android:id="@+id/dateBtn_Txt"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:textColor="@color/boldBlackColor"
        android:background="@drawable/grey_btn_background"
        android:alpha="0.6"
        android:lineSpacingExtra="12sp"
        android:layout_marginTop="10dp"
        android:text="Date"
        android:drawableRight="@drawable/ic_calendar_black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourEditionFor_Txt"
        app:font_path="@string/FONT_FIRA_SANS_REGULAR"
        android:maxLines="1"
        android:visibility="gone"
        />

    <com.ns.view.CustomTextView
        android:id="@+id/editionBtn_Txt"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:textColor="@color/boldBlackColor"
        android:background="@drawable/grey_btn_background"
        android:alpha="0.6"
        android:lineSpacingExtra="12sp"
        android:layout_marginTop="10dp"
        android:text="All Edition"
        android:drawableRight="@drawable/ic_edition_dropdown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourEditionFor_Txt"
        app:font_path="@string/FONT_FIRA_SANS_REGULAR"
        android:maxLines="1"
        />

    <com.ns.view.RecyclerViewPullToRefresh
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/apptab_listing_top_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editionBtn_Txt"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </com.ns.view.RecyclerViewPullToRefresh>

</android.support.constraint.ConstraintLayout>
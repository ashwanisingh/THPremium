<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/subscription_pack_width"
    android:layout_height="@dimen/subscription_pack_height_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shadow_subscription_pack"
    android:layout_marginLeft="20dp"
    android:padding="@dimen/subscription_pack_item_border_padding">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/itemContentMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_red_backgraoud"
        android:paddingLeft="31dp"
        android:paddingStart="31dp"
        android:paddingEnd="31dp"
        android:paddingRight="31dp"
        android:paddingTop="16dp"
        android:paddingBottom="11dp"
        >

        <com.ns.view.CustomTextView
            android:id="@+id/packName_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="Starter Pack"
            app:font_path="@string/FONT_TUNDRA_OFFC_BOLD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <com.ns.view.CustomTextView
            android:id="@+id/planValidity_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:alpha="0.7"
            android:text="1 month"
            app:font_path="@string/FONT_FIRA_SANS_REGULAR"
            app:layout_constraintTop_toBottomOf="@+id/packName_Txt"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <com.ns.view.CustomTextView
            android:id="@+id/currencyType_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/subscription_pack_item_rupee_gap"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:text="@string/Rs"
            app:font_path="@string/FONT_TUNDRA_OFFC"
            app:layout_constraintTop_toBottomOf="@+id/planValidity_Txt"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <com.ns.view.CustomTextView
            android:id="@+id/currencyValue_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="43sp"
            android:textColor="#ffffff"
            android:text="99"
            app:font_path="@string/FONT_TUNDRA_OFFC_BOLD"
            app:layout_constraintTop_toBottomOf="@+id/planValidity_Txt"
            app:layout_constraintLeft_toRightOf="@+id/currencyType_Txt"
            />


        <com.ns.view.CustomTextView
            android:id="@+id/planOffer_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:alpha="0.7"
            android:text="Limited period offer"
            app:font_path="@string/FONT_FIRA_SANS_REGULAR"
            app:layout_constraintTop_toBottomOf="@+id/planValidity_Txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:maxLines="2"
            />


        <com.ns.view.CustomTextView
            android:id="@+id/subscribe_Txt"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:textSize="12sp"
            android:textColor="#AC1717"
            android:gravity="center"
            android:alpha="0.7"
            android:text="Subscribe"
            app:font_path="@string/FONT_FIRA_SANS_BOLD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/white_backgraoud"
            />


    </android.support.constraint.ConstraintLayout>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/apptab_listing_left_padding"
    android:paddingStart="@dimen/apptab_listing_left_padding"
    android:paddingEnd="@dimen/apptab_listing_right_padding"
    android:paddingRight="@dimen/apptab_listing_right_padding"
    android:paddingTop="@dimen/apptab_listing_top_padding">

    <com.ns.view.CustomTextView
        android:id="@+id/userName_Txt"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textSize="16sp"
        android:textColor="@color/boldBlackColor"
        android:lineSpacingExtra="12sp"
        android:layout_marginTop="5dp"
        tools:text="Ashwaniâ€™s Dashboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:font_path="@string/FONT_FIRA_SANS_BOLD"
        />

    <com.ns.view.CustomTextView
        android:id="@+id/recentStoriesCount_Txt"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:gravity="bottom"
        android:textSize="14sp"
        android:textColor="@color/greyColor_1"
        android:lineSpacingExtra="12sp"
        android:text="Recent 5 stories at the moment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName_Txt"
        app:font_path="@string/FONT_FIRA_SANS_REGULAR"
        android:visibility="gone"
        />

    <com.ns.view.CustomTextView
        android:id="@+id/recentBtn_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/boldBlackColor"
        android:background="@drawable/grey_btn_background"
        android:alpha="0.6"
        android:lineSpacingExtra="12sp"
        android:text="Recent"
        android:drawableRight="@drawable/ic_sort"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:font_path="@string/FONT_FIRA_SANS_REGULAR"
        android:visibility="gone"
        />

    <com.ns.view.RecyclerViewPullToRefresh
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/apptab_listing_top_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentStoriesCount_Txt"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </com.ns.view.RecyclerViewPullToRefresh>

</android.support.constraint.ConstraintLayout>
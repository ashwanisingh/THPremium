<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/moreTabLayout"
    android:background="@color/dimBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="@string/more_popup_layout_ratio"
        android:background="@drawable/shadow_white_nobottom_r12_s6_wh200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/apptab_listing_left_padding"
        android:paddingStart="@dimen/apptab_listing_left_padding"
        android:paddingEnd="@dimen/apptab_listing_right_padding"
        android:paddingRight="@dimen/apptab_listing_right_padding"
        android:paddingTop="@dimen/apptab_listing_top_padding"
        >

        <com.ns.view.CustomTextView
            android:id="@+id/suggested_Txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:textColor="@color/optionTxtColor"
            android:gravity="center"
            android:text="Suggested"
            android:layout_marginTop="20dp"
            app:font_path="@string/FONT_FIRA_SANS_REGULAR"
            />

        <include
            layout="@layout/listing_divider"
            android:id="@+id/horizontalDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listing_divider_height"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <com.ns.view.CustomTextView
            android:id="@+id/personalise_Txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:textColor="@color/optionTxtColor"
            android:gravity="center"
            android:text="Personalise"
            app:font_path="@string/FONT_FIRA_SANS_REGULAR"
            />

        <include
            layout="@layout/listing_divider"
            android:id="@+id/horizontalDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listing_divider_height"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />


        <com.ns.view.CustomTextView
            android:id="@+id/cancel_Txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:textColor="@color/optionTxtColor"
            android:gravity="center"
            android:text="Cancel"
            app:font_path="@string/FONT_FIRA_SANS_REGULAR"
            />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
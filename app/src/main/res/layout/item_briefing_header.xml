<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ns.view.CustomTextView
        android:id="@+id/userName_Txt"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textSize="16sp"
        android:textColor="@color/boldBlackColor"
        android:lineSpacingExtra="12sp"
        tools:text="Hi Ashwani"
        app:font_path="@string/THP_FiraSans_SemiBold"
        />

    <com.ns.view.CustomTextView
        android:id="@+id/yourEditionFor_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textSize="14sp"
        android:textColor="@color/greyColor_1"
        android:lineSpacingExtra="12sp"
        android:text="Your edition for 30th jan"
        app:font_path="@string/THP_FiraSans_Regular"
        android:visibility="visible"
        />

    <com.ns.view.CustomTextView
        android:id="@+id/editionBtn_Txt"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:textColor="@color/boldBlackColor"
        android:background="@drawable/grey_btn_background"
        android:alpha="0.6"
        android:lineSpacingExtra="12sp"
        android:layout_marginTop="10dp"
        android:text="All Edition"
        android:drawableRight="@drawable/ic_edition_dropdown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourEditionFor_Txt"
        app:font_path="@string/THP_FiraSans_Regular"
        android:maxLines="1"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@color/greyColor_1"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <ImageButton
        android:id="@+id/btn_personalise"
        style="@style/backBtnStyle"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_plus"
        />

    <com.ns.view.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_personalise"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.6"
        android:letterSpacing="0.03"
        android:text="Top Stories"
        android:textColor="@color/boldBlackColor"
        android:textSize="14sp"
        app:font_path="@string/FONT_FIRA_SANS_REGULAR" />

   </RelativeLayout>

